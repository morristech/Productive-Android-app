<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Login screen-->
    <style name="ImageViewLogo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/productive_logo</item>
        <item name="android:layout_marginTop">@dimen/small_spacing</item>
    </style>

    <style name="LoginCredentialsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/loginCredentialsContainerBackgroundColor</item>
        <item name="android:layout_marginTop">@dimen/logo_to_credentials_spacing</item>
        <item name="android:layout_below">@+id/logo_image</item>
    </style>

    <style name="LoginCredentials">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/login_credentials_padding</item>
    </style>

    <style name="SignInAndRegisterButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/side_margin_buttons</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginCredentialsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing</item>
        <item name="android:layout_marginRight">@dimen/separator_margin_right</item>
    </style>

    <style name="ShowHidePasswordButton">
        <item name="android:layout_height">@dimen/show_hide_button_height</item>
        <item name="android:layout_width">@dimen/show_hide_button_width</item>
        <item name="android:layout_marginTop">@dimen/show_hide_button_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/showHideButtonTextColor</item>
    </style>


    <!-- Activity Main items-->

    <style name="ViewPagerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_layout_border</item>
        <item name="android:paddingBottom">@dimen/micro_spacing</item>
        <item name="android:paddingTop">@dimen/micro_spacing</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/tab_layout_text_selector</item>
    </style>

    <style name="SingleTabIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/nano_spacing</item>
    </style>

    <!-- Fragments inside activity main -->
    <style name="NoAssignedItemsFoundTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/empty_projects_list</item>
        <item name="android:textSize">@dimen/empty_list_message_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/recyclerViewBackgroundColor</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:paddingTop">@dimen/recycler_section_padding_top</item>
        <item name="android:paddingBottom">@dimen/recycler_section_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/recycler_section_padding_left</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/projectAndSectionDescriptionColor</item>
    </style>

    <!-- parent="Theme.AppCompat.Light.DarkActionBar" -->
    <style name="TaskContentTabLayoutFont">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TaskContentTabLayout" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark"
              tools:targetApi="lollipop">
            @color/signinButtonDefaultColor
        </item>
    </style>

    <!-- List items  -->
    <style name="ListTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/larger_spacing</item>
        <item name="android:paddingBottom">@dimen/micro_spacing</item>
        <item name="android:layout_marginLeft">@dimen/list_item_space_between_avatar_and_data</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/listTitleColor</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/separatorTextColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="ListItemAvatarPicture">
        <item name="android:layout_width">@dimen/project_list_thumbnail_pic_width_height</item>
        <item name="android:layout_height">@dimen/project_list_thumbnail_pic_width_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <!-- Task details -->

    <style name="TaskDetailsTvTexts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing</item>
        <item name="android:layout_marginTop">@dimen/default_spacing</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TaskDetailsAssigneeOnTaskContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/default_spacing</item>
        <item name="android:paddingLeft">@dimen/default_spacing</item>
        <item name="android:paddingTop">@dimen/default_spacing</item>
        <item name="android:paddingBottom">@dimen/default_spacing</item>
    </style>

    <style name="TaskDetailsSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing</item>
        <item name="android:layout_marginTop">@dimen/default_spacing</item>
        <item name="android:layout_marginRight">@dimen/default_spacing</item>
    </style>

    <style name="TaskDetailsTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_spacing</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing</item>
    </style>

</resources>
