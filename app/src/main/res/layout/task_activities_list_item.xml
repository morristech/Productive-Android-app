<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/small_spacing"
    android:paddingLeft="@dimen/smaller_spacing"
    android:paddingRight="@dimen/smaller_spacing"
    android:paddingTop="@dimen/small_spacing">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_task_activities_thumbnail"
        style="@style/ListItemAvatarPicture"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/separator_margin_right" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_spacing">

        <TextView
            android:id="@+id/tv_task_activities_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/micro_spacing"
            android:textSize="@dimen/title_text_size"
            tool:text="Sample Title" />

        <TextView
            android:id="@+id/tv_task_activities_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_activities_title"
            tool:text="sample description 123 sample description 123 sample description 123" />

        <TextView
            android:id="@+id/tv_task_activities_elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tool:text="12 minutes ago" />

    </RelativeLayout>

</LinearLayout>