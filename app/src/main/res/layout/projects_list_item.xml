<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/default_spacing">

    <LinearLayout
            android:id="@+id/projects_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/item_card_border"
            android:layout_toRightOf="@+id/item_thumbnail"
            android:layout_toLeftOf="@+id/projects_arrow_right"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/projects_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:lines="1"
                android:ellipsize="end"
                tools:text="This is something we're trying to test"/>

        <TextView
                android:id="@+id/projects_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/small_text_size"
                tools:text="Updated 3 hours ago by Mislav J."/>

    </LinearLayout>

    <ImageView
            android:id="@+id/projects_arrow_right"
            android:layout_width="@dimen/project_list_arrow_width_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/item_card_border"
            android:src="@drawable/ic_keyboard_arrow_right"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/item_thumbnail"
            android:layout_width="@dimen/project_list_thumbnail_pic_width_height"
            android:layout_height="@dimen/project_list_thumbnail_pic_width_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FFF"
            app:civ_border_width="5dp"/>

</RelativeLayout>


