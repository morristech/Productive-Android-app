<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/task_tab_layout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        style="@style/TaskContentTabLayout"
        app:tabTextAppearance="@style/TaskContentTabLayoutFont"
        app:tabIndicatorColor="@color/tabItemSelectedColor"
        android:elevation="@dimen/default_action_bar_elevation" />

    <android.support.v4.view.ViewPager
        android:id="@+id/task_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_spacing"
        android:layout_weight="1"/>

</LinearLayout>