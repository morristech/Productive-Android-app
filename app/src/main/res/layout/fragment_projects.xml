<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="co.infinum.productive.fragments.ProjectsFragment">

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/projects_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/projects_recycler_view"
                style="@style/RecyclerViewStyle"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
            android:id="@+id/empty_projects_info"
            style="@style/NoAssignedItemsFoundTextView"/>

</RelativeLayout>